<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>
      <div class="row">
        <%= link_to edit_user_path(@user.id), class: 'btn btn-outline-secondary btn-block' do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>

      <%= render 'list' %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image(100,100) %><br>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book_id.id) do %>
                <%= @book_id.title %>
              <% end %>
            </td>
            <td><%= @book_id.body %></td>
            <td>
              <% if @user == current_user %>
                <%= link_to "Edit", edit_book_path(@book_id) %>
              <% end %>
            </td>
            <td>
              <% if @user == current_user %>
                <%= link_to "Destroy", book_path(@book_id), method: :delete %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>